[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab

[{makefile,Makefile}]
indent_style = tab
indent_size = tab

[*.{md,json,tsx,js,html,css}]
indent_style = tab
indent_size = tab

[*.{yaml}]
indent_style = space
tab_width = 2
